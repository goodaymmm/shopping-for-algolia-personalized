{
  "compilerOptions": {
    "lib": ["es2023", "ES2024.Promise"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "verbatimModuleSyntax": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  }
}
